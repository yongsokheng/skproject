<div class="row">
  <div class="col-md-9 album">
    <%= render "share/album_detail" %>
    <%= render "share/player" if @songs.present? %>
    <h4>Song Lyric</h4>
    <div class="lyric"></div>
    <%= render "share/fb_comment_box" %>
  </div>
  <div class="col-md-3">
    <h4>Other Albums</h4>
    <%= render partial: "album_left", collection: @similar_albums, as: :album %>
  </div>
</div>
