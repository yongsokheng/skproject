<div class="row search-result">
  <div class="col-md-2 song-image">
    <%= link_to song do %>
      <%= image_tag song.image.url, class: "img-responsive" %>
    <% end %>
  </div>

  <div class="col-md-10 song-result">
    <h4 class="title"><%= link_to song.kh_title, song %></h4>
    <p class="album"><%= link_to song.album.kh_name, song.album %></p>
    <p class="artist"><%= get_artist_with_link(song).html_safe %></p>
    <p><span class="fb-like" data-href="<%= song_url(song.id) %>" data-width="100%" data-layout="  button_count" data-action="like" data-show-faces="false" data-share="true"></span>
    <span></p>
  </div>
</div>
