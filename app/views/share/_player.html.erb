<div class="player">
  <div class="audio-player" data-total="<%= @songs.count %>">
    <div class="mask"></div>
    <div class="promotion-img"></div>
    <div class="audio-control">
      <p class="audio-title"></p>
      <p class="audio-artist"></p>
      <div class='glyphicon glyphicon-remove-circle btn-close'></div>
      <div class="glyphicon glyphicon-collapse-down btn-show-promotion"></div>
      <span class="btn-prev"></span>
      <span class="btn-next"></span>
      <span class="btn-repeat-song"></span>
      <audio id="audio-player" src="<%= @songs.first.url %>" type="audio/mp3"></audio>
    </div>
  </div>
  <div class="playlist">
    <table class="table table-hover table-songs">
      <tbody>
        <%= render @songs %>
      </tbody>
    </table>
  </div>
</div>
